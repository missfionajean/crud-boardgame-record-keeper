<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/style.css" />
		<title>Document</title>
	</head>
	<body>
		<section class="page-head">
			<h1>Gameplay Records</h1>
		</section>
		<section id="record-list">
			<ul>
				<% records.forEach((record) => { %>
					<li>
						<a href="/champions/records/<%= record._id %>">
							<%= record.gameDate %> - <%= record.gameName %>
						</a>
					</li>
				<% }) %>
			</ul>
		</section>
		<div class="button-box">
			<form action="/champions/records/new">
				<button type="submit">Add New Record</button>
			</form>
			<form action="/champions">
				<button type="submit">View Leaderboard</button>
			</form>
			<form action="/">
				<button type="submit">Return To Lobby</button>
			</form>
		</div>
	</body>
</html>
